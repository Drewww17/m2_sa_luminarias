rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function userDoc(uid) {
      return get(/databases/$(database)/documents/users/$(uid));
    }

    function hasUserDoc(uid) {
      return signedIn() && exists(/databases/$(database)/documents/users/$(uid));
    }

    function role() {
      return hasUserDoc(request.auth.uid) ? userDoc(request.auth.uid).data.role : null;
    }

    function isAdmin() {
      return role() == "admin";
    }

    function isDoctorApproved() {
      return role() == "doctor"
        && userDoc(request.auth.uid).data.approvalStatus == "approved";
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isOwner(uid) || isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /scans/{scanId} {
      allow read: if isAdmin()
        || isDoctorApproved()
        || (signedIn() && resource.data.userId == request.auth.uid);

      allow create: if isAdmin()
        || isDoctorApproved()
        || (signedIn() && request.resource.data.userId == request.auth.uid);

      allow update: if isAdmin()
        || isDoctorApproved()
        || (signedIn() && resource.data.userId == request.auth.uid);

      allow delete: if isAdmin();
    }

    match /reportVerifications/{scanId} {
      allow read: if true;
      allow write: if isAdmin() || isDoctorApproved();
    }

    match /auditLogs/{logId} {
      allow create: if signedIn();
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
